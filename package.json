{
  "name": "chatbot-gpt",
  "module": "index.ts",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "nodemon --exec \"bun src/server.ts\" --ext ts,js,json",
    "dev:bun": "bun --watch src/server.ts",
    "build": "tsc -p .",
    "start": "node dist/server.js",
    "start:prod": "bun dist/server.js",
    "test": "bun --env-file=.env.test test",
    "test:watch": "bun --env-file=.env.test test --watch",
    "db:migrate:test": "bun --env-file=.env.test prisma migrate deploy"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/node": "^24.5.2",
    "prisma": "^6.16.1",
    "ts-jest": "^29.4.4",
    "ts-node": "^10.9.2"
  },
  "peerDependencies": {
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "@prisma/client": "^6.16.1",
    "@types/jest": "^30.0.0",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "cors": "^2.8.5",
    "express": "^4.18.0",
    "nodemon": "^3.1.10",
    "supertest": "^7.1.4",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "zod": "^4.1.8"
  }
}
